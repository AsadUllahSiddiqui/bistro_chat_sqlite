<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10"
    tools:context=".chatting_terminal">
    <LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
        android:weightSum="6"

        android:orientation="horizontal"
    >
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <ImageButton android:id="@+id/user_chat_back_Button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:maxWidth="80dp"
                android:layout_centerVertical="true"
                android:maxHeight="78dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="7dp"
                android:background="@null"
                android:src="@drawable/back_button"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Contact Name"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                >
            </TextView>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c3c3c3"
                android:text="Online Status"
                android:layout_below="@+id/contact_name"
                android:layout_centerHorizontal="true"
                >
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/checkprofile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@null">

            </Button>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:id="@+id/profile_img"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/abc"></de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
    android:layout_weight="8"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_terminal_rv"
            android:layout_width="match_parent"
            android:foregroundGravity="bottom"
            android:layout_height="match_parent"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:id="@+id/p1"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/text_bar"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageButton android:id="@+id/camera_Button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="10dp"
                    android:maxWidth="80dp"
                    android:maxHeight="78dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="7dp"
                    android:background="@null"
                    android:src="@drawable/cam"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/msgET"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColorHint="#c3c3c3"
                    android:textSize="12dp"
                    android:hint="Type your message here..."
                    android:gravity="left"
                    >
                </EditText>

            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/send"
                    android:layout_width="23dp"
                    android:layout_height="29dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:maxWidth="80dp"
                    android:maxHeight="78dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/send" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>