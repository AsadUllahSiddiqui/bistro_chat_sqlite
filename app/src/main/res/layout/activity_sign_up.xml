<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00d664"
    tools:context=".sign_up">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:maxWidth="300dp"
        android:maxHeight="150dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="3dp"
        android:background="#00d664"
        android:src="@drawable/chat_app_logo"
        />
    <LinearLayout
        android:id="@+id/username_layout"
        android:padding="5dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:background="@drawable/text_view_background"
        >
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/user_icon"
            >
        </ImageView>
        <EditText
            android:id="@+id/username"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Username Or email"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="12dp"
            android:textColor="#ffffff"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/password_layout"
        android:padding="5dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/username_layout"
        android:background="@drawable/text_view_background"
        >
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/key_icon"
            >
        </ImageView>
        <EditText
            android:id="@+id/password"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="password"
            android:inputType="textPassword"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textAlignment="gravity"
            android:textSize="12dp"
            android:textColor="#ffffff"
            >
        </EditText>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:src="@drawable/eye_icon"
            >
        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/reEnter_password_layout"
        android:padding="5dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_layout"
        android:background="@drawable/text_view_background"
        >
        <ImageView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/key_icon"
            >
        </ImageView>
        <EditText
            android:id="@+id/reEnter_password"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Confirm Password "
            android:inputType="textPassword"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textAlignment="gravity"
            android:textSize="12dp"
            android:textColor="#ffffff"
            >
        </EditText>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:src="@drawable/eye_icon"
            >
        </ImageView>

    </LinearLayout>
    <ImageButton
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reEnter_password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="28dp"
        android:adjustViewBounds="true"
        android:background="#00d664"
        android:maxWidth="250dp"
        android:maxHeight="58dp"
        android:scaleType="fitCenter"
        android:src="@drawable/register_button" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="11dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="By tapping 'Register' I agree to privacy policy and terms of condition"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@id/register_button"
        ></TextView>
    <LinearLayout
        android:gravity="bottom"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/register_button"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:gravity="right"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Already have account?">
        </TextView>
        <TextView
            android:id="@+id/Sign_in_here"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Sign in here">
    </TextView>

    </LinearLayout>

</RelativeLayout>